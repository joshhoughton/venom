{
  "name": "Venom - Hotkey Bookmarker for YT & SC",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Instantly save the timestamp of a playing YouTube video or SoundCloud track, on screen or in the background.",
  "content_security_policy": "script-src 'self' https://maxcdn.bootstrapcdn.com https://ajax.googleapis.com; object-src 'self';",

  "icons": {
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
        "src/bg/background.js",
        "src/popup/moment.js"
    ]
  },
  "browser_action": {
      "default_icon": "icons/icon128.png",
      "title": "See your Bookmarks"
  },
  "permissions": [
    "*://*.youtube.com/watch?v=*",
    "*://*.soundcloud.com/*",
    "tabs",
    "downloads",
    "activeTab",
    "storage",
    "notifications"
  ],

  "commands": {
    "record-timestamp": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Save Timestamp of YouTube Video"
    }
  }
}